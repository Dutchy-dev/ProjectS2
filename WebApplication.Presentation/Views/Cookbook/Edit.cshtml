@model WebApplication.Presentation.Models.EditCookbookViewModel

@{
    ViewData["Title"] = "Kookboek bewerken";
}

<h2>Bewerk Kookboek</h2>

<form asp-action="Edit" method="post" class="mt-4">
    @* Verborgen velden *@
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Naam</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Beschrijving</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Opslaan</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

