@model List<WebApplication.Presentation.Models.ShoppingListWithProductsViewModel>

<h2>Kies een boodschappenlijst</h2>



<table class="table">
    <thead>
        <tr>
            <th>Thema</th>
            <th>Kies</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model)
        {
            <tr>
                <td>@list.Theme</td>
                <td>
                    <form asp-controller="ProductList" asp-action="AddToList" method="get">
                        <input type="hidden" name="shoppingListId" value="@list.ShoppingListId" />
                        <button type="submit" class="btn btn-primary">Kies</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

